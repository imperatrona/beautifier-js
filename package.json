{
  "name": "beautifier",
  "version": "0.0.2",
  "description": "Bot that creates clean Telegraph pages from any link",
  "main": "dist/app.js",
  "repository": "https://github.com/imperatrona/Beautifier",
  "author": "Moldoteck <moldotecko@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node dist/app.js",
    "distribute": "npm run build-ts && npm run start",
    "dev": "npx tsx --watch ./src/app.ts",
    "build": "npx tsc --skipLibCheck",
    "prepare": "ts-patch install -s",
    "migrate": "npx drizzle-kit generate:sqlite && npx tsx src/models/migrate.ts"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^14.14.35",
    "drizzle-kit": "^0.20.6",
    "ts-patch": "^3.2.0",
    "typescript-transform-paths": "^3.4.7"
  },
  "dependencies": {
    "@grammyjs/i18n": "^1.0.2",
    "@grammyjs/parse-mode": "^1.10.0",
    "@mozilla/readability": "^0.4.2",
    "better-sqlite3": "^11.0.0",
    "cheerio": "^1.0.0-rc.6",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "grammy": "^1.24.1",
    "jsdom": "^16.5.3",
    "module-alias": "^2.2.3",
    "telegraph-node": "^1.0.4",
    "telegraph-wrapper": "^1.0.2",
    "typescript": "^5.3.2"
  }
}