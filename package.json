{
  "name": "telegraf-template",
  "version": "1.0.0",
  "description": "Telegram bot template based on telegraf.js.org",
  "main": "dist/app.js",
  "repository": "https://github.com/Moldoteck/telegraf-template",
  "author": "Moldoteck <moldotecko@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "distribute": "npm run build-ts && node dist/app.js",
    "develop": "concurrently -k -i -p \"[{name}]\" -n \"Node,TypeScript\" -c \"yellow.bold,cyan.bold\" \"npm run watch-js\" \"npm run watch-ts\"",
    "build-ts": "npx tsc --skipLibCheck",
    "watch-ts": "npx tsc -w --skipLibCheck",
    "watch-js": "npx nodemon dist/app.js",
    "migrate": "npx drizzle-kit generate:sqlite && npx tsx src/models/migrate.ts"
  },
  "devDependencies": {
    "@types/needle": "^2.5.1",
    "@types/node": "^14.14.35",
    "concurrently": "^6.0.0",
    "drizzle-kit": "^0.20.6",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "@mozilla/readability": "^0.4.2",
    "better-sqlite3": "^9.2.0",
    "cheerio": "^1.0.0-rc.6",
    "dotenv": "^8.2.0",
    "drizzle-orm": "^0.29.1",
    "jsdom": "^16.5.3",
    "module-alias": "^2.2.2",
    "needle": "^2.5.1",
    "puppeteer": "5.4.1",
    "telegraf": "^4.3.0",
    "telegraf-i18n": "^6.6.0",
    "telegraph-node": "^1.0.4",
    "typescript": "^5.3.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
